<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/zhifubao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/zhifubao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pay_zhifubao"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/pay_yes"
        app:layout_constraintEnd_toEndOf="@id/zhifubao"
        app:layout_constraintTop_toTopOf="@id/zhifubao" />

    <ImageView
        android:id="@+id/weixin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/weixin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zhifubao" />

    <ImageView
        android:id="@+id/pay_weixin"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/pay_yes"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/weixin"
        app:layout_constraintTop_toTopOf="@id/weixin" />

</android.support.constraint.ConstraintLayout>